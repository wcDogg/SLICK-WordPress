{
  "name": "SLICK-WordPress",
  "version": "1.0.0",
  "description": "A custom WordPress theme for SLICK.SEXY",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {

      "build-task:destroy-dist": "del-cli slick",
      "build-task:make-dist": "make-dir slick",

      "build-task:copy-templates": "cpy \"**/*.*\" \"../../slick\" --cwd=src/templates",
      "build-task:copy-includes": "cpy \"**/*.*\" \"../../slick/inc\" --cwd=src/inc",
      "build-task:copy-languages": "cpy \"**/*.*\" \"../../slick/languages\" --cwd=src/languages",
      "build-task:copy-parts": "cpy \"**/*.*\" \"../../slick/parts\" --cwd=src/parts --parents",      

      "build-task:css-rtl": " node-sass src/sass/rtl.scss --output-style compressed --source-map true --source-map-embed -o slick/ ",
      "build-task:css-style": " node-sass src/sass/style.scss --output-style expanded --source-map true --source-map-embed -o slick/ ",      
      "build-task:auto-prefix": " postcss slick/*.css -u autoprefixer -r -map",

      "build-task:babel": "babel src/js -d slick/js",
     
      "build": "npm-run-all -s -c build-task:*"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wcDogg/SLICK-WordPress"
  },
  "author": "Lisa Burton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wcDogg/SLICK-WordPress/issues"
  },
  "homepage": "https://github.com/wcDogg/SLICK-WordPress",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "autoprefixer": "^9.5.1",
    "babel-preset-minify": "^0.5.0",
    "cpy-cli": "^2.0.0",
    "del-cli": "^1.1.0",
    "make-dir-cli": "^2.0.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2"
  }
}
