{
  "name": "SLICK-WordPress",
  "version": "1.0.0",
  "description": "A custom WordPress theme for SLICK.SEXY",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "dev-task:destroy-css": "del-cli src/css",
    "dev-task:make-css": "make-dir src/css",
    "dev-task:new-css": "node-sass src/sass/ -o src/css",
    "dev-task:watch-sass": "node-sass src/sass/ -wo src/css",
    "dev": "npm-run-all -s dev-task:*",

    "build-task:destroy-dist": "del-cli slick",
    "build-task:make-dist": "make-dir slick",

    "build-task:copy-templates": "cpy \"**/*.*\" \"../../slick\" --cwd=src/templates",
    "build-task:copy-assets": "cpy \"**/*.*\" \"../../slick/assets\" --cwd=src/assets --parents",
    "build-task:copy-acf": "cpy \"**/*.*\" \"../../slick/acf-json\" --cwd=src/acf-json", 
    "build-task:copy-includes": "cpy \"**/*.*\" \"../../slick/inc\" --cwd=src/inc", 
    "build-task:copy-languages": "cpy \"**/*.*\" \"../../slick/languages\" --cwd=src/languages",       
    "build-task:copy-parts": "cpy \"**/*.*\" \"../../slick/parts\" --cwd=src/parts --parents",

    "build-task:style": "node-sass --output-style compressed src/sass/style.scss slick/style.css",
    "build-task:styleAuto": "postcss slick/style.css -u autoprefixer -r",

    "build-task:rtl": "node-sass --output-style compressed src/sass/rtl.scss slick/rtl.css",
    "build-task:rtlAuto": "postcss slick/rtl.css -u autoprefixer -r",

    "build-task:sass": "node-sass --output-style compressed src/sass/*/ -o slick/css/*",
    "build-task:sassAuto": "postcss slick/css -u autoprefixer -r",

    "build-task:babel": "babel src/js -d slick/js",
    "build": "npm-run-all -s -c build-task:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wcDogg/SMART-Wordpress.git"
  },
  "author": "Lisa Burton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wcDogg/SMART-Wordpress/issues"
  },
  "homepage": "https://github.com/wcDogg/SMART-Wordpress#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "autoprefixer": "^9.5.1",
    "babel-preset-minify": "^0.5.0",
    "cpy-cli": "^2.0.0",
    "del-cli": "^1.1.0",
    "make-dir-cli": "^2.0.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2"
  }
}
